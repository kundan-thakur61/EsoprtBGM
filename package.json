{
  "name": "esports-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack esports tournament platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently -k -n BACKEND,FRONTEND -c green,cyan \"nodemon server.js\" \"npm --prefix frontend run dev\"",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js",
    "backup": "node scripts/backup.js",
    "cleanup": "node scripts/cleanup.js",
    "docs": "swagger-jsdoc -d swaggerDef.js -o docs/swagger.json ./routes/**/*.js",
    "build": "node scripts/build.js",
    "deploy": "node scripts/deploy.js"
  },
  "dependencies": {
    "aws-sdk": "^2.1450.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.4",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "qrcode": "^1.5.3",
    "rate-limit-redis": "^3.0.1",
    "razorpay": "^2.9.2",
    "redis": "^5.8.0",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "validator": "^13.11.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.6.4",
    "mongodb-memory-server": "^8.15.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/esports-platform-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/esports-platform-backend/issues"
  },
  "homepage": "https://github.com/yourusername/esports-platform-backend#readme"
}
